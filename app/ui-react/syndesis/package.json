{
  "name": "@syndesis/syndesis",
  "version": "0.1.0",
  "private": true,
  "workspaces": {
    "nohoist": [
      "**/babel-loader",
      "**/babel-jest",
      "**/babel-jest/**"
    ]
  },
  "dependencies": {
    "@allpro/react-router-pause": "^1.1.3",
    "@craco/craco": "^5.0.2",
    "@syndesis/api": "*",
    "@syndesis/apicurio-adapter": "*",
    "@syndesis/atlasmap-adapter": "*",
    "@syndesis/auto-form": "*",
    "@syndesis/history": "*",
    "@syndesis/models": "*",
    "@syndesis/ui": "*",
    "@syndesis/utils": "*",
    "http-proxy-middleware": "^0.19.1",
    "i18next": "^15.0.4",
    "i18next-browser-languagedetector": "^3.0.1",
    "immer": "^3.1.1",
    "named-urls": "^1.4.0",
    "patternfly-react": "^2.29.2",
    "react": "^16.8.3",
    "react-content-loader": "^4.0.1",
    "react-dom": "^16.8.3",
    "react-dropzone": "^10.0.0",
    "react-fast-compare": "^2.0.2",
    "react-helmet": "^5.2.0",
    "react-i18next": "^10.2.0",
    "react-loadable": "^5.5.0",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "workbox-window": "^4.3.1"
  },
  "scripts": {
    "lint": "tslint -c ../tslint.json --project .",
    "mock-server": "./scripts/mock-server.js",
    "record:dev-server": "yarn proxy:setup; BACKEND_COOKIE=`./scripts/get-login-cookie.js $BACKEND` BACKEND=http://localhost:8556 yarn start",
    "record": "npm-run-all -p record:dev-server \"mock-server record $BACKEND\" --",
    "proxy:setup": "./scripts/proxy-setup.sh",
    "proxy": "yarn proxy:setup; BACKEND_COOKIE=`./scripts/get-login-cookie.js $BACKEND` yarn start",
    "minishift": "yarn minishift:setup; yarn start",
    "replay:dev-server": "BACKEND=http://localhost:8556 yarn proxy:setup; BACKEND=http://localhost:8556 PROXY_NO_WS=true yarn start",
    "replay": "npm-run-all -p replay:dev-server \"mock-server -- {1}\" --",
    "start": "BROWSER=false HOST=0.0.0.0 craco start",
    "build": "NODE_OPTIONS=--max-old-space-size=3072 craco build",
    "test": "craco test",
    "e2e": "cypress open",
    "e2e:terminal": "cypress run",
    "eject": "react-scripts eject",
    "minishift:setup": "./scripts/minishift-setup.sh",
    "minishift:restore": "./scripts/minishift-restore.sh",
    "copyasset:atlasmap": "cpr ../packages/atlasmap-assembly/dist/atlasmap public/atlasmap -d",
    "copyasset:apicurio": "cpr ../packages/apicurio-assembly/dist/apicurio public/apicurio -d",
    "prebuild": "npm-run-all copyasset:*"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@storybook/addon-a11y": "^5.0.11",
    "@storybook/addon-actions": "^5.0.11",
    "@storybook/addon-info": "^5.0.11",
    "@storybook/addon-knobs": "^5.0.11",
    "@storybook/addon-links": "^5.0.11",
    "@storybook/addon-notes": "^5.0.11",
    "@storybook/addon-options": "^5.0.11",
    "@storybook/addon-viewport": "^5.0.11",
    "@storybook/react": "^5.0.11",
    "@storybook/theming": "^5.0.11",
    "@types/i18next": "^12.1.0",
    "@types/jest": "^24.0.11",
    "@types/named-urls": "*",
    "@types/node": "^12.0.0",
    "@types/react": "^16.4.14",
    "@types/react-content-loader": "*",
    "@types/react-dom": "^16.0.8",
    "@types/react-helmet": "^5.0.8",
    "@types/react-loadable": "*",
    "@types/react-router-dom": "^4.3.1",
    "@types/storybook__react": "^4.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-named-asset-import": "^0.3.1",
    "babel-preset-react-app": "^8.0.0",
    "cpr": "^3.0.1",
    "cypress": "^3.4.0",
    "jest-dom": "^3.1.3",
    "my-local-ip": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^1.13.0",
    "react-scripts": "3.0.0",
    "react-testing-library": "^7.0.0",
    "talkback": "^1.10.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.5",
    "yargs": "^13.2.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
