{
  "name": "@syndesis/apicurio-adapter",
  "version": "0.1.0",
  "main": "dist/apicurio-adapter.js",
  "umd:main": "dist/apicurio-adapter.umd.js",
  "typings": "dist/apicurio-adapter/src/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "private": true,
  "workspaces": {
    "nohoist": [
      "**/babel-loader",
      "**/babel-jest"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@storybook/addon-info": "^5.3.8",
    "@storybook/addon-options": "^5.3.8",
    "@storybook/react": "^5.3.8",
    "@testing-library/jest-dom": "^4.0.0",
    "@types/expect": "^24.3.0",
    "@types/jest": "^24.0.11",
    "@types/patternfly-react": "*",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "expect": "^24.1.0",
    "jest": "^25.1.0",
    "jest-cli": "^25.1.0",
    "microbundle": "^0.11.0",
    "react": "^16.6.0",
    "react-docgen-typescript-loader": "^3.1.0",
    "react-dom": "^16.6.0",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "@testing-library/react": "^9.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "ts-loader": "^7.0.5",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-react": "^4.0.0",
    "typescript": "~3.8.3"
  },
  "scripts": {
    "lint": "tslint -c ../../tslint.json --project .",
    "test": "jest",
    "test:watch": "yarn run test --watch",
    "prebuild": "rimraf dist",
    "build": "microbundle --format cjs --no-compress",
    "dev": "microbundle watch --format cjs --no-compress"
  },
  "peerDependencies": {
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1"
  },
  "dependencies": {
    "@syndesis/apicurio-assembly": "*",
    "react-fast-compare": "^3.1.1"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/../.jest/setup.ts"
    ],
    "preset": "ts-jest",
    "moduleNameMapper": {
      "\\apicurio/.*.js$": "<rootDir>/../.jest/fileMock.js",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/../.jest/fileMock.js",
      "\\.(css|less)$": "<rootDir>/../.jest/styleMock.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    }
  }
}
