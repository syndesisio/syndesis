schema {
    query: Query
}

type Query {
    integrations: ListResultIntegration
}

type ListResultIntegration {
    totalCount: Int
    items: [Integration]
}

type Integration {
    id: ID
    name: String
    kind: String
    steps: [Step]
}
type Step {
    kind: String
    #action: Action
    stepKind: String
    name: String
    configuredProperties: [Entry]
}

type Entry {
    key: String
    value: String
}

