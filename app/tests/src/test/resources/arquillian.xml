<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://jboss.org/schema/arquillian"
    xsi:schemaLocation="http://jboss.org/schema/arquillian
    http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <extension qualifier="kubernetes">
      <!-- This is blocked by https://github.com/openshift/origin/issues/13197 -->
      <property name="env.dependencies">file:../deploy/support/serviceaccount-as-oauthclient-restricted.yml</property>
      <property name="env.config.url">file:../deploy/syndesis-restricted.yml</property>
      <property name="template.parameters.file">file:./src/test/resources/template.properties</property>
      <property name="wait.timeout">600000</property>
      <property name="logs.copy">true</property>
    </extension>

</arquillian>
